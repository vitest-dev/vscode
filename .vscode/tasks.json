// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "dev",
      // Based on https://github.com/luxass/tsup-problem-matchers/blob/71ccba09ab14fb938fae736bbc9131e3e471253c/package.json#L34
      "problemMatcher": {
        "severity": "error",
        "pattern": [
          {
            "regexp": "^âœ˜\\s+\\[ERROR\\]\\s+(.+)$",
            "message": 1
          },
          {
            "regexp": "^\\s*$"
          },
          {
            "regexp": "^\\s+(.+):(\\d+):(\\d+):$",
            "file": 1,
            "line": 2,
            "column": 3
          }
        ],
        "background": {
          "beginsPattern": "^ESM|^CJS Build start$",
          "endsPattern": "^ESM|^CJS .* Build success|^ESM|^CJS Build failed"
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
